# Pinata IPFS Configuration
# Get your JWT from the Pinata dashboard: https://docs.pinata.cloud/overview
PINATA_JWT=
PINATA_GATEWAY_URL=https://gateway.pinata.cloud/ipfs/

# Hedera Configuration
HEDERA_NETWORK=testnet
HEDERA_ACCOUNT_ID=
HEDERA_PRIVATE_KEY=

# Mirror Node base URL (note the /api/v1 suffix)
HEDERA_MIRROR_NODE_URL=https://testnet.mirrornode.hedera.com/api/v1

# Public API base URL for the Next.js app (client-side)
NEXT_PUBLIC_API_URL=http://localhost:3000

# Hedera File Service (HFS) keypair for encrypting provider key blobs
HEDERA_HFS_PUBLIC_KEY=
HEDERA_HFS_PRIVATE_KEY=

# Optional: mock external calls (set to "1" to enable)
MOCK_API_CALLS=